{
  "name": "@ideanick/backend",
  "private": true,
  "version": "0.0.0",
  "devDependencies": {
    "@sentry/cli": "^2.51.1",
    "@types/cors": "^2.8.19",
    "@types/cron": "^2.4.3",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.13.4",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/triple-beam": "^1.3.5",
    "chokidar": "^4.0.3",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prisma": "^6.12.0",
    "tsc-alias": "^1.8.16"
  },
  "scripts": {
    "dev": "ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "build-emails": "rimraf src/emails/dist && mkdirp src/emails/dist && mjml src/emails/[!_]*.mjml -o src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.json && tsc-alias",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "sentry-release": "dotenv -- cross-env-shell sentry-cli releases new $SOURCE_VERSION --finalize --org university-yf --project backend --auth-token $SENTRY_AUTH_TOKEN",
    "sentry-sourcemaps": "dotenv -- cross-env-shell sentry-cli releases files $SOURCE_VERSION upload-sourcemaps ./dist --org university-yf --project backend",
    "sentry": "pnpm sentry-release && pnpm sentry-sourcemaps",
    "start": "node ./dist/backend/src/index.js",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prettify": "prettier --log-level warn --cache --write \"src/**/*.{ts,tsx,js,json,yml,scss}\" \"!**/{node_modules,dist}/**/*\"",
    "prepare": "pnpm pgc && ts-patch install -s"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@ideanick/shared": "workspace:*",
    "@ideanick/webapp": "workspace:*",
    "@prisma/client": "^6.12.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^7.120.4",
    "@trpc/server": "^10.45.2",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "debug": "^4.4.1",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "react-router-dom": "^6.30.1",
    "serialize-error": "8.1.0",
    "superjson": "^2.2.2",
    "triple-beam": "^1.4.1",
    "trpc-playground": "^1.0.4",
    "winston": "^3.17.0",
    "yaml": "^2.8.1",
    "zod": "^4.0.5"
  }
}
