{
  "name": "ideanick",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @ideanick/backend",
    "w": "pnpm --filter @ideanick/webapp",
    "sh": "pnpm --filter @ideanick/shared",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "types": "concurrently \"pnpm b types\" \"pnpm w types\" \"pnpm sh types\"",
    "lint": "concurrently \"pnpm b lint\" \"pnpm w lint\" \"pnpm sh lint\"",
    "prettify": "pnpm  -r --parallel prettify",
    "dcc": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- docker compose config",
    "dcb": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- docker compose build",
    "dcu": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- docker compose up",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-config-standard-with-typescript": "37.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "mkdirp": "^3.0.1",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "ts-patch": "^3.3.0",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.34.1",
    "typescript-transform-paths": "^3.5.5"
  },
  "overrides": {
    "eslint": "9.20.0"
  },
  "dependencies": {
    "dotenv-cli": "^7.3.0",
    "cross-env": "^7.0.3",
    "formik": "^2.4.6",
    "formik-validator-zod": "^2.2.0",
    "zod": "^4.0.5"
  }
}
